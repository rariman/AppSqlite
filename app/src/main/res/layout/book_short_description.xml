<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/default_title"
        android:id="@+id/tileTextView"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="@color/title_color"
        android:layout_marginLeft="@dimen/title_horizontal_margin"
        android:layout_marginRight="@dimen/title_horizontal_margin"
        android:layout_marginTop="@dimen/description_layout_vertical_margin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/default_description"
        android:id="@+id/descriptionTextView"
        android:typeface="serif"
        android:textColor="@color/description_color"
        android:layout_marginLeft="@dimen/description_horizontal_margin"
        android:layout_marginRight="@dimen/description_horizontal_margin"
        android:layout_marginBottom="@dimen/description_layout_vertical_margin" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_view_thickness"
        android:background="@color/view_separator_color"/>
</LinearLayout>